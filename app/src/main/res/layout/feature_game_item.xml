<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/company_game_imageView"
        android:layout_width="135dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/company_game_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/company_game"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/company_game_imageView"
        app:layout_constraintEnd_toEndOf="@+id/company_game_imageView"
        app:layout_constraintStart_toStartOf="@+id/company_game_imageView" />
</android.support.constraint.ConstraintLayout>