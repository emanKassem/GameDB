<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/page_game_imageview"
            android:layout_width="128dp"
            android:layout_height="133dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/page_game_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:text="@string/game_name"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/page_game_imageview"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/reviewer_name"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/page_game_imageview"
            app:layout_constraintTop_toBottomOf="@+id/page_game_name_textView" />


        <TextView
            android:id="@+id/review_introduction_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/description"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/page_game_imageview"
            app:layout_constraintTop_toBottomOf="@+id/page_game_imageview" />

        <TextView
            android:id="@+id/review_content_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/description_content"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/page_game_imageview"
            app:layout_constraintTop_toBottomOf="@+id/review_introduction_textView" />
        <TextView
            android:id="@+id/review_conclusion_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/description_conclusion"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/page_game_imageview"
            app:layout_constraintTop_toBottomOf="@+id/review_content_textView" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="61dp"
            android:layout_height="47dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:src="@drawable/website"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@color/colorAccent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>