<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gameImageViewWidget"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background"
        android:contentDescription="@string/game_cover"/>

    <TextView
        android:id="@+id/gameNameTextViewWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gameImageViewWidget"
        android:layout_alignStart="@+id/gameImageViewWidget"
        android:layout_alignEnd="@+id/gameImageViewWidget"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</RelativeLayout>